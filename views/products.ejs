<%- include("partials/header.ejs") %>
<section class="mt-28">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold text-center mb-6">Products Sold by You</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% products.forEach(product => { %>
                <div class="bg-white rounded-lg shadow-lg p-6 relative">
                    <h2 class="text-xl font-semibold mb-2"><%= product.product_name %></h2>
                    <p class="text-gray-700 mb-2">Price: <%= product.price %></p>
                    <p class="text-gray-700 mb-2">Location: <%= product.location %></p>
                    <p class="text-gray-700 mb-4">Description: <%= product.description %></p>
                    <form action="/delete-product/<%= product.id %>" method="POST" class="absolute top-2 right-2">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this product?')"
                            class="text-red-500 hover:text-red-700 focus:outline-none">
                            Delete
                        </button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
</section>
<%- include("partials/footer.ejs") %>
